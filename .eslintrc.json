{
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "no-var": "error",
        "no-console": "off"
    }
}